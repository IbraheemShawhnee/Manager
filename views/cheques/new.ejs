<% layout("layouts/cardplate")%>

	<h5 class="card-title mb-3">Insert a new Cheque</h5>
	<hr>
	<form action="/cheques" method="POST" novalidate class="needs-validation">
		<div class="mb-3">
			<label class="form-label" for="dueDate">Due Date</label>
			<input class="form-control" type="date" name="cheque[dueDate]" value=<%=date %>
			id="dueDate"
			required
			style="height: 60px;"
			>
		</div>
		<div class="mb-3">
			<label class="form-label" for="payee">Payee</label>
			<select class="form-control" name="cheque[payee]" id="payee" style="height: 60px;">
				<option selected hidden value="">Choose...</option>
				<% for(let payee of payees) {%>
					<option value="<%= payee._id %>">
						<%= payee.name %>
					</option>
					<% } %>
			</select>
			<div class="invalid-feedback">
				Please select a payee.
			</div>
		</div>
		<div class="form-floating mb-3">
			<input class="form-control" type="text" name="cheque[serial]" id="serial" placeholder="Cheque Serial Number"
				pattern="[0-9]{1,3}" required autofocus>
			<label for="serial">Serial Number</label>
		</div>
		<div class="input-group mb-3">
			<span class="input-group-text">â‚ª</span>
			<div class="form-floating flex-grow-1">
				<input class="form-control" type="text" name="cheque[value]" id="value" placeholder="Cheque Value"
					pattern="[1-9]{1}[0-9]{1,6}" required>
				<label class="form-label" for="value">Value</label>
			</div>
		</div>
		<div class="form-floating mb-3">
			<input class="form-control" type="text" name="cheque[description]" id="description"
				placeholder="Cheque Description">
			<label for="description">Description</label>
		</div>
		<div class="form-check">
			<input class="form-check-input" type="checkbox" name="cheque[isCancelled]" id="isCancelled">
			<label class="form-check-label" for="isCancelled">Cancelled</label>
		</div>
		<div class="my-3">
			<button class="btn btn-lg btn-success w-100">Submit</button>
		</div>
	</form>
	<a href="/cheques" class="btn btn-dark" role="button" aria-pressed="true">Back</a>