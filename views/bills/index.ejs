<% layout("layouts/boilerplate")%>

	<div class="row">
		<h1 class="text-center">
			Bills Page!
		</h1>
		<table class="table table-striped table-hovers mt-3">
			<thead>
				<th>Date</th>
				<th>Value</th>
				<th>Description</th>
				<th>Extra notes</th>
				<th>Total:₪<%= sum %>
				</th>
				<th></th>
			</thead>
			<tbody>
				<% for(let bill of bills) {%>
					<tr>
						<th>
							<%= bill.date.toISOString().substring(0, 10)%>
						</th>
						<th>₪<%= bill.value %>
						</th>
						<th>
							<%= bill.description %>
						</th>
						<th colspan="2" id="extraNotes">
							<%= bill.extraNotes %>
						</th>
						<th>
							<a class="btn btn-primary btn-sm" href="/bills/<%=bill._id%>">View</a>
							<form class="d-inline px-3" method="POST" action="/bills/<%=bill._id%>?_method=DELETE">
								<button class="btn btn-sm btn-outline-danger">
									Delete
								</button>
							</form>
						</th>
					</tr>
					<% } %>
			</tbody>
		</table>
	</div>