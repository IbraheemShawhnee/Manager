<% layout("layouts/cardplate")%>

	<h5 class="card-title mb-3">Edit Bill #<%= bill._id %>
	</h5>
	<hr>
	<form method="POST" action="/bills/<%=bill._id%>?_method=PUT" novalidate class="needs-validation">
		<div class="mb-3">
			<label class="form-label" for="date">Date of Bill</label>
			<input class="form-control" type="date" name="bill[date]"
				value="<%= bill.date.toISOString().substring(0, 10) %>" id="date" required style="height: 60px;">
		</div>
		<div class="input-group mb-3">
			<span class="input-group-text">â‚ª</span>
			<div class="form-floating flex-grow-1">
				<input class="form-control" type="text" name="bill[value]" id="value" placeholder="Bill Value"
					value="<%= bill.value %>" pattern="[1-9,-]{1}[0-9]{0,7}" required autofocus>
				<label class="form-label" for="value">Value </label>
			</div>
		</div>
		<div class="form-floating mb-3">
			<input class="form-control" type="text" name="bill[description]" id="description"
				placeholder="Bill Description" value="<%= bill.description %>" required>
			<label for="description">Description</label>
			<div class="invalid-feedback">Description can't be blank</div>
		</div>
		<div class="form-floating mb-3">
			<textarea class="form-control" name="bill[extraNotes]" id="notes" placeholder="Bill Extra Notes"
				style="height: 100px"><%= bill.extraNotes %></textarea>
			<label for="notes">Leave any extra notes here</label>
		</div>
		<div class="mb-3">
			<button class="btn btn-lg btn-primary w-100">Update</button>
		</div>
	</form>
	<a href="/bills/<%=bill._id%>" class="btn btn-dark" role="button" aria-pressed="true">Cancel</a>