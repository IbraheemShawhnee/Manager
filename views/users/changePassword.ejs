<% layout("layouts/boilerplate")%>

    <div class="container d-flex-justify-content-cennet align-items-center mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img class="card-img-top mb-3"
                        src="https://images.unsplash.com/photo-1624382497213-0458e9207973?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Change Password</h5>
                        <form action="/changePassword" method="POST" novalidate class="needs-validation">
                            <div class="form-floating mb-3">
                                <input class="form-control" type="password" name="oldpassword" id="oldpassword" placeholder="Old Password" required>
                                <label for="password">Old Password <span style="color: red;">*</span></label>
                                <div class="invalid-feedback">can't be blank</div>
                            </div>
                            <div class="form-floating mb-3">
                                <input class="form-control" type="password" name="password" id="password" placeholder="New Password" required>
                                <label for="password">New Password <span style="color: red;">*</span></label>
                                <div class="invalid-feedback">can't be blank</div>
                            </div>
                            <!-- <div class="form-floating mb-3">
                                <input class="form-control" type="password" name="password2" id="password2" placeholder="Confirm New Password" required>
                                <label for="password2">Confirm New Password <span style="color: red;">*</span></label>
                                <div class="invalid-feedback">can't be blank</div>
                            </div> -->
                            <div class="mb-3">
                                <button class="btn btn-lg btn-outline-primary w-100">Change Password</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>