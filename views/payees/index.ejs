<% layout("layouts/boilerplate")%>

	<div class="row">
		<h1 class="text-center">
			Payees Page!
		</h1>
		<table class="table table-striped table-hovers mt-3">
			<thead>
				<th>Name</th>
				<th>Email</th>
				<th>Phone Number</th>
				<th>Extra Notes</th>
				<th></th>
			</thead>
			<tbody>
				<% for(let payee of payees) {%>
					<tr>
						<th>
							<%= payee.name%>
						</th>
						<th>
							<%= payee.email%>
						</th>
						<th>
							<%= payee.phoneNumber%>
						</th>
						<th id="extraNotes">
							<%= payee.extraNotes%>
						</th>
						<th>
							<a class="btn btn-primary btn-sm" href="/payees/<%=payee._id%>">View</a>
							<form class="d-inline px-3" method="POST" action="/payees/<%=payee._id%>?_method=DELETE">
								<button class="btn btn-sm btn-outline-danger">
									Delete
								</button>
							</form>
						</th>
					</tr>
					<% } %>
			</tbody>
		</table>
	</div>